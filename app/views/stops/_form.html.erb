<%= form_for [trip, stop] do |form| %>
  <%= form.label :stay_time %>
  <%= form.text_field :stay_time %>

  <%= form.label :transportation_mode %>
  <%= form.select :transportation_mode, ["Walking", "Transit",
                                         "Driving", "Cycling"] %>

  <%= form.label :location_id %>
  <%= form.collection_select :location_id, Location.all, :id, :name_with_address %>

  <%= form.submit %>
<% end %>
