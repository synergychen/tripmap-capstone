<%= render "error_messages", target: stop %>

<%= form_for [trip, stop] do |form| %>
  <%= form.label :Duration %>
  <%= form.text_field :stay_time, size: 10 %>

  <%= form.label :location_id %>
  <%= form.collection_select :location_id, Location.all,
    :id, :name_with_address %>

  <%= form.submit "Add a stop" %>
<% end %>
