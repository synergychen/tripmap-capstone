<div class="error-messages">
  <% if target.errors.any? %>
    <%= pluralize(target.errors.count, "error") %> prevented your account from being created:
    <ul>
      <% target.errors.full_messages.each do |error_message| %>
        <li>- <%= error_message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
