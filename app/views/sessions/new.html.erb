<div class="sign-wrapper">
  <%= form_for :session, url: session_path, class: "sign-form" do |form| %>
    <div class="form-item">
      <%= form.label :email %>
      <%= form.email_field :email, placeholder: "Email" %>
    </div>
    <div class="form-item">
      <%= form.label :password %>
      <%= form.password_field :password, placeholder: "Password" %>
    </div>
    <div class="form-submit">
      <%= form.submit "Login" %>
    </div>
  <% end %>
</div>
